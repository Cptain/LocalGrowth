<table class="shop-item" id="<%= fun_shop.id%>" width="600px" height="100px">
  <td class="shop-logo" width="130px;" height="100%"><%= image_tag(fun_shop.logo_url) %></td>
  <td class="shop-info" height="100%" width="65%"> 
    <table width="100%" height="100%">
      <tr height="48%">
        <td width="100%"><table width="100%" height="100%" id="main-data">
          <td width="56%" height="100%" class="center" id="title"><b ><%= fun_shop.title %></b></td>
          <td width="44%" id="address" class="center"><b>Διεύθυνση:</b><br><%= fun_shop.address %></td>
        </table></td>
      </tr>
      <% if fun_shop.fun_subcategories.any? %>
      <tr>
        <th width="100%"  class="subcategory center">          
            <b>Υποκατηγορίες:</b>
        </th>
      </tr>      
      <tr>
        <td width="100%" class="center">              
          <% fun_shop.fun_subcategories.each do |subcategory| %>
            <b class="subcategories"><%= subcategory.title %></b>
          <% end %> 
        </td>
      </tr>
      <% else %>
      <tr></tr>
      <tr></tr>
      <% end %>

    </table>
  </td>
  <% if fun_shop.phones.any? %>
  <td class="phones" height="100%"> 
    <table class="center"> 
    <% if fun_shop.phones.count > 1 %>
      <th>Τηλέφωνα</th>
    <% else %>
      <th>Τηλέφωνο</th>
    <% end %>
      <% fun_shop.phones.each do |phone| %>
          <tr>            
            <td>
              <%= phone.number_type + ":" %>
              <%= phone.number %>
            </td>
          </tr>
      <% end %> 
    </table>
  </td>
  <% else %>
    <td class="phones" height="100%"></td>
  <% end %>
</table>
